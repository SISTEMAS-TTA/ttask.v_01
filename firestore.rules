rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función helper para verificar si el usuario es administrador
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Administrador';
    }
    
    //----------------NUEVO BLOQUE---------------------------------
    // Reglas para que los usuarios jefe de area agreguen usuarios a la misma area

    // Función helper para obtener el rol del usuario
    function getUserRole(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role;
    }

    // Devuelve el perfil completo del usuario que llama
    function getCallerProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Verifica si el Jefe que llama puede registrar el nuevo rol (NUEVA LÓGICA CLAVE)
    function canRegisterUser(newRole) {
      let callerProfile = getCallerProfile();
      let callerRole = callerProfile.role;

      // 1. Permiso Máximo: Administrador puede crear cualquier rol.
      return callerRole == 'Administrador' ||
             // 2. Si el usuario tiene el flag isAreaChief y el rol coincide
             (callerProfile.isAreaChief == true && callerRole == newRole);
      
      // 3. Ningún otro usuario puede registrar (implícito en el return false)
    }
    
    //---------------------------------------------------------
    
    // Reglas para usuarios
    match /users/{userId} {
      // Cualquier usuario autenticado puede leer todos los usuarios
      allow read: if request.auth != null;
      
      // SOLO SE AGREGO ESTO 24/11/25: Permite la escritura (creación/actualización) si el rol es Administrador O Director
  		allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "Administrador"
              || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "Director"; 
      
      // [MODIFICACIÓN CLAVE EN LA REGLA CREATE]
      // Solo permitimos la creación si es un Jefe/Admin autorizado.
      allow create: if request.auth != null && (
        // 1. Auto-registro (para usuarios que ya existen en Auth y crean su perfil por primera vez).
        request.auth.uid == userId
        // 2. O si es un Jefe/Admin y la asignación de rol es válida.
        || canRegisterUser(request.resource.data.role)
      );
      
      // Permitir actualizar propio perfil o admin; evitar que usuarios normales cambien su role
      allow update: if request.auth != null && (
        isAdmin()
        || (
          request.auth.uid == userId
          && request.resource.data.role == resource.data.role
        )
      );

      // Solo administradores pueden eliminar perfiles
      allow delete: if isAdmin();
    }
    
    // Reglas para tareas
    match /tasks/{taskId} {
      // Usuarios autenticados pueden leer todas las tareas
      allow read: if request.auth != null;
      
      // Usuarios autenticados pueden crear tareas (validamos assignedBy usado por el frontend)
      allow create: if request.auth != null &&
        request.resource.data.assignedBy == request.auth.uid;

      // Solo el creador (assignedBy) o el asignado (assigneeId) pueden actualizar/eliminar
      allow update, delete: if request.auth != null &&
        (resource.data.assignedBy == request.auth.uid ||
         resource.data.assigneeId == request.auth.uid);
    }

    // Reglas para notas
    match /notes/{noteId} {
      // Solo usuario autenticado puede leer sus propias notas
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;

      // Crear: solo si el campo userId coincide con el usuario autenticado
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Actualizar/Borrar: solo el propietario de la nota
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Reglas para proyectos
    function isDirector() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Director';
    }
    
    match /projects/{projectId} {
      allow create: if isDirector();
      allow read: if request.auth != null && (
        isDirector() ||
        (request.auth.uid in resource.data.members) ||
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in resource.data.rolesAllowed)
      );
      allow update: if request.auth != null && (
        isDirector() || (request.auth.uid in resource.data.members)
      );
      allow delete: if isDirector();
    }
    
    // Denegar todo lo demás por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}